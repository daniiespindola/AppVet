<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tp_AppVet</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        /* Definición de colores vibrantes para la temática veterinaria */
        .bg-vet-primary {
            background-color: #38c1a6 !important; /* Verde/Azul Vibrante para Header/Menu */
        }

        .bg-vet-dark {
            background-color: #17a2b8 !important; /* Azul más oscuro para el Footer */
        }

        .text-vet-secondary {
            color: #ffc107 !important; /* Amarillo Cómico para resaltar */
        }

        .navbar {
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.3); /* Sombra para darle ese "pop" exagerado */
            border-bottom: 5px solid #ff69b4 !important; /* Borde rosa vibrante */
        }

        .navbar-brand, .nav-link {
            font-weight: 800; /* Extra Negrita para que resalte */
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
            transition: color 0.3s ease-in-out;
        }

            .nav-link:hover {
                color: #ff69b4 !important; /* Rosa al pasar el mouse */
            }

        .footer {
            box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
            font-size: 1.1em;
        }
        /* Estilo para el mensaje de bienvenida del usuario (Vista Linda) */
        .welcome-message {
            font-weight: bold;
            color: #ff69b4; /* Rosa Vibrante para la bienvenida */
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            background-color: rgba(255, 255, 255, 0.1);
        }
    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-vet-primary box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-vet-secondary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-paws-fill me-2"></i>AppVet
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill me-1"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-lock-fill me-1"></i> Privacy
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item d-flex align-items-center me-3">
                                <span class="navbar-text welcome-message">
                                    <i class="bi bi-person-circle me-1"></i> ¡Hola, @User.Identity.Name!
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-vet-dark text-white">
        <div class="container text-center py-3">
            <i class="bi bi-suit-heart-fill text-danger me-1"></i> &copy; 2025 - Tp_AppVet - Mascotas Felices
            <i class="bi bi-dog me-2"></i><i class="bi bi-cat me-2"></i>
            -
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-vet-secondary text-decoration-none">Política de Privacidad</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="https://cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>

    <script>
        var successMessage = '@Html.Raw(TempData["SuccessMessage"])';

        if (successMessage && successMessage.trim() !== '' && successMessage !== 'null') {
            Swal.fire({
                icon: 'success',
                title: '¡Operación Exitosa!',
                text: successMessage
            });
        }
    </script>
    <script>
        $(document).ready(function () {
            $('.datatable').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/2.3.4/i18n/es-ES.json'
                },
                responsive: true,
                pageLength: 5,
                lengthMenu: [5, 10, 25, 50]
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>