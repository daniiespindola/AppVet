@model IEnumerable<Tp_AppVet.Models.Turno>

@{
    ViewData["Title"] = "Index";
}

<h1>Turnos Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mascota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Veterinario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Motivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mascota.Especie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Veterinario.Apellido)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-controller="VeterinarioDashboard" asp-action="Index" class="btn btn-secondary p-2">
    ← Volver al Dashboard Vet
</a>
@if (User.IsInRole("Administrador"))
{
    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-secondary">
        ← Volver al Dashboard Admin
    </a>
}