@model Tp_AppVet.Models.Cliente
@{
    ViewData["Title"] = "Mi Panel - Cliente";
}
<div class="container mt-4">
    <h2>🐾 Bienvenido, @Model.Nombre @Model.Apellido</h2>
    <hr />
    <h3 class="mt-4">🐾 Mis Mascotas</h3>
    @if (Model.Mascotas != null && Model.Mascotas.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Especie</th>
                        <th>Raza</th>
                        <th>Edad</th>
                        <th>Turnos</th>
                        <th>Ficha Médica</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mascota in Model.Mascotas)
                    {
                        <tr>
                            <td>@mascota.Nombre</td>
                            <td>@mascota.Especie</td>
                            <td>@mascota.Raza</td>
                            <td>@mascota.Edad</td>
                            <td>
                                @if (mascota.Turnos != null && mascota.Turnos.Any())
                                {
                                    <ul>
                                        @foreach (var t in mascota.Turnos)
                                        {
                                            <li>
                                                @t.Fecha.ToShortDateString() - @t.Motivo
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">Sin turnos</span>
                                }
                            </td>

                            <td>
                                @if (mascota.FichaMedica != null)
                                {
                                    <div>
                                        <strong>Fecha:</strong> @mascota.FichaMedica.FechaCreacion.ToShortDateString()<br />
                                        <strong>Obs.:</strong> @mascota.FichaMedica.Observaciones
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">Sin ficha médica</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="alert alert-info">Todavía no tenés mascotas registradas.</p>
    }
</div>
